    <script>
        document.getElementById('form-cadastro').addEventListener('submit', (evt) => {
            evt.preventDefault();

            const nome = document.getElementById('nome-cadastro').value;
            const numero_cartao = document.getElementById('numero-cartao').value;
            const cargo = document.getElementById('cargo-cadastro').value;
            const senha = document.getElementById('senha-cadastro').value;
            const atribuicao = document.getElementById('atribuicao-cadastro').value;


            var myHeaders = new Headers();
            myHeaders.append("Content-Type", "application/json");

            var raw = JSON.stringify({
                nome: nome,
                numero: numero_cartao,
                cargo: cargo,
                senha: senha,
                nivel: atribuicao
            });

            var requestOptions = {
                method: 'POST',
                headers: myHeaders,
                body: raw,
                redirect: 'follow'
            };

            fetch("http://localhost:3000/cadastrar/usuario", requestOptions)
                .then(response => response.json())
                .then(result => {
                    console.log(result)
                    let x = confirm(result.msg)
                 
                });
        })

