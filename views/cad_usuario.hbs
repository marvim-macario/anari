            const nome = document.getElementById('NOME').value;
            const cartao = document.getElementById('CARTAO-USUARIO').value;
            const cargo = document.getElementById('CARGO').value;
            const senha = document.getElementById('SENHA').value;
            const atribuicao = document.getElementById('ATRIBUICAO').value;
            const tabela = document.getElementById('table')

            const modalAlterar = (nome, cartao, cargo, senha, nivel) => {
                document.getElementById('NOME-ALTERA').value = nome;
                document.getElementById('CARTAO-USUARIO-ALTERA').value = cartao;
                document.getElementById('CARGO-ALTERA').value = cargo;
                document.getElementById('SENHA-ALTERA').value = senha;
                document.getElementById('ATRIBUICAO-ALTERA').value = nivel;
            }

            var myHeaders = new Headers();
            myHeaders.append("Content-Type", "application/json");

            var raw = JSON.stringify({
                NOME: nome,
                NUMERO_CARTAO: cartao,
                CARGO: cargo,
                SENHA: senha,
                ATRIBUICAO: atribuicao,
            });

            var requestOptions = {
                method: 'POST',
                headers: myHeaders,
                body: raw,
                redirect: 'follow'
            };

            fetch("http://localhost:3000/usuario/pesquisa", requestOptions)
                .then(response => response.json())
                .then(result => {
                    result.forEach((data) => {
                        console.log(data);
                        table.innerHTML += `<tr>
                    <td>${data.NOME_USUARIO}</td>
                    <td>${data.CARTAO_USUARIO}</td>
