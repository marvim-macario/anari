    <div class="container">
        <div class="formulario">
            <h1 class="title">SAIDA PRODUTO</h1>
            <div class="row">
                <form action="/cadastro/produto" method="POST">
                <div class="col">

                    <label>TIPO VESTU√ÅRIO</label>
                    <input id="" type="text" class="form-control" name="VESTUARIO">
                </div>
                <div class="col">
                    <label>TECIDO</label>
                    <input id="" type="text" class="form-control" name="TECIDO">
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <label>TAMANHO</label>
                    <input id="" type="text" class="form-control" name="TAMANHO">
                </div>
                <div class="col">
                    <label>GENERO</label>
                    <input id="" type="text" class="form-control" name="GENERO">
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <label>CATEGORIA</label>
                    <input id="" type="text" class="form-control" name="CATEGORIA">
                </div>
                <div class="col">
                    <label>COD_FORNECEDOR</label>
                    <input id="" type="text" class="form-control" name="COD_FORNECEDOR">
                </div>
            </div>
            <div class="row">
                <div class="col-6">
                    <label>QUANTIDADE</label>
                    <input id="" type="text" class="form-control" name="QUANTIDADE">
                </div>
                <div class="col-6">
                    <button id="pesquisar" type="submit" class="btn btn-success">
                        Registra
                    </button>
                </div>
                </form>
                <div class="col-6">
                    <button id="pesquisar" type="button" class="btn btn-success" data-bs-toggle="modal"
                        data-bs-target="#exampleModal">
                        Pesquisa
                    </button>
                </div>

            </div>
        </div>
        <div class="pesquisa">
            <table id="table" style="width:100%">
                <tr>
                    <th>CATEGORIA</th>
                    <th>TIPO</th>
                    <th>TAMANHO</th>
                    <th>GENERO</th>
                    <th>FORNECEDOR</th>
                    <th>QUANTIDADE</th>
                </tr>
               
               
            </table>
        </div>
    </div>
    <script>
        document.getElementById('pesquisar').addEventListener('click', (evt) => {
            const categoria = document.getElementById('CATEGORIA').value;
            const tipo_produto = document.getElementById('TIPO').value;
            const tamanho = document.getElementById('TAMANHO').value;
            const genero = document.getElementById('GENERO').value;
            const cod_produto = document.getElementById('COD_PRODUTO').value;
            const cod_fornecedor = document.getElementById('COD_FORNECEDOR').value;
            const tabela = document.getElementById('table')
        var myHeaders = new Headers();
        myHeaders.append("Content-Type", "application/json");

        var raw = JSON.stringify({
            CATEGORIA_PRODUTO:categoria,
            TIPO_PRODUTO:tipo_produto,
            TAMANHO_PRODUTO:tamanho,
            GENERO_PRODUTO:genero,
            COD_PRODUTO:cod_produto,
            COD_FORNECEDOR:cod_fornecedor
        });

        var requestOptions = {
        method: 'POST',
        headers: myHeaders,
        body: raw,
        redirect: 'follow'
        };

        fetch("http://localhost:3000/cadastro/produto/pesquisa", requestOptions)
        .then(response => response.json())
        .then(result => {
            result.forEach((data) => {
                console.log(data);
                table.innerHTML+= `<tr>
                    <td>${data.CATEGORIA_PRODUTO}</td>
                    <td>${data.TIPO_PRODUTO}</td>
                    <td>${data.TAMANHO_PRODUTO}</td>
                    <td>${data.GENERO_PRODUTO}</td>
                    <td>${data.COD_FORNECEDOR}</td>
                    <td>${data.QUANTIDADE_PRODUTO}</td>
                </tr>`
            })
        })
        .catch(error => console.log('error', error));
})

document.getElementById()
    </script>
